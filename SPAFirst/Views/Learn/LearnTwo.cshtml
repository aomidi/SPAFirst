
@{
    ViewBag.Title = "LearnTwo";
}

<h2 data-bind="text:say"></h2>

<script>

	var viewModel = function () {
		self = this;
		self.say = "Learn Knockout";
	}

	$(function () {
		
		ko.applyBindings(new viewModel());
		$('#btnShow').click(function () {
			$('#myModal').modal({ show: true });
		})
	})
</script>

<div class="panel panel-primary hidden">
	<div class="panel-heading">
		<span class="panel-title">show names</span>
	</div>
	<div class="panel-body">
		
	</div>
</div>

<div class="panel panel-primary">
	<div class="panel-heading">
		<span class="panel-title">Click</span>
	</div>
	<div class="panel-body">
		<button type="button" id="btnShow" class="btn btn-primary" >Show</button> //data-toggle="modal" data-target="#myModal"
	</div>
</div>

<div class="modal fade" id="myModal" role="dialog" tabindex="-1">
	<div class="modal-dialog">

		<!-- Modal content-->
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal">&times;</button>
				<h4 class="modal-title">Modal Header</h4>
			</div>
			<div class="modal-body">
				<p>Some text in the modal.</p>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
			</div>
		</div>

	</div>
</div>

