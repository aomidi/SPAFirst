@model IEnumerable<SPAFirst.Models.Person>

@{
	ViewBag.Title = "Index";
}

<h2>@SPAFirst.Resources.Messages.PersonList</h2>

<p>
	@Html.ActionLink(SPAFirst.Resources.Strings.Buttons.CreateNew(),MVC.People.Create(),htmlAttributes:new { @class="btn btn-primary"})
</p>
<table class="table table-bordered table-condensed table-hover table-striped">
	<tr>
		<th>
			@Html.DisplayNameFor(model => model.FirstName)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.LastName)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.Title)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.IsActive)
		</th>
		<th></th>
	</tr>

@foreach (var item in Model) {
	<tr>
		<td>
			@Html.DisplayFor(modelItem => item.FirstName)
		</td>
		<td>
			@Html.DisplayFor(modelItem => item.LastName)
		</td>
		<td>
			@Html.DisplayFor(modelItem => item.Title)
		</td>
		<td>
			@Html.DisplayFor(modelItem => item.IsActive)
		</td>
		<td>
			@Html.ActionLink(SPAFirst.Resources.Strings.Buttons.Edit(), "Edit", new { id=item.PersonID },htmlAttributes:new { @class = "btn btn-warning" }) |
			@Html.ActionLink(SPAFirst.Resources.Strings.Buttons.Details(), "Details", new { id=item.PersonID }, htmlAttributes: new { @class = "btn btn-info" }) |
			@Html.ActionLink(SPAFirst.Resources.Strings.Buttons.Delete(), "Delete", new { id=item.PersonID }, htmlAttributes: new { @class = "btn btn-danger" })
		</td>
	</tr>
}
